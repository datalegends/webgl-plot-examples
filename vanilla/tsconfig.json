{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "src",
    "src/**/*.js",
    "types"
  ]
}
